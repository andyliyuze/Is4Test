@model Is4Test.Model.LoginViewModel
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="icon" href="/favicon.ico">
    <title>hello-world</title>
    <link href="~/css/login.css" rel="stylesheet" />

</head>
<body>
    <div id="app">
        <div>
            <form class="van-form" action="/account/login" method="post">
                <input type="hidden" value="@Model.ReturnUrl" name="ReturnUrl" />
                <div class="van-cell van-field">
                    <div class="van-cell__title van-field__label">
                        <span>用户名</span>
                    </div><div class="van-cell__value van-field__value">
                        <div class="van-field__body">
                            <input type="text"  placeholder="用户名"  name="Username"  class="van-field__control">
                        </div>
                    </div>
                </div><div class="van-cell van-field">
                    <div class="van-cell__title van-field__label">
                        <span>密码</span>
                    </div><div class="van-cell__value van-field__value">
                        <div class="van-field__body">
                            <input type="password"  name="Password" placeholder="密码" class="van-field__control">
                        </div>
                    </div>
                </div>
                <div class="loginbtn_div" style="margin: 16px !important;">
                    <button name="button" value="login" type="submit" class="mybtn van-button van-button--info van-button--normal van-button--block van-button--round">
                        <div class="van-button__content">
                            <span class="van-button__text">登录</span>
                        </div>
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>